    private string color = "";
    private bool showAlert = false;
    private AlertStyle alertStyle;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await UpdateList();
    }

    private async Task UpdateList()
    {
        showAlert = false;
        try
        {
            AgreementsByHostDTO dto = await AgreementInterface.GetAllRequestsByHostDTOAsync(new AgreementsByHostDTO(authService.GetEmail(), ""));
            myAgreements.Add();
        }
        catch (Exception e)
        {
            alertStyle = AlertStyle.Warning;
            showAlert = true;
            resultMsg = e.Message;
        }
    }
