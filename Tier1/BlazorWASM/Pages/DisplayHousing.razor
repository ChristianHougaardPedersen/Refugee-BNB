@page "/DisplayHousing"
@using System.Collections.ObjectModel
@using global::Shared.Domain
@using global::Shared.DTOs
@using HttpClients.ClientInterfaces
@using UIComponents
@inject HousingInterface HousingInterface
@inject AgreementInterface AgreementInterface


<h3>DisplayHousing</h3>

@if (allHousing?.Any() == true)
{
    <RadzenButton Click="@ClearSelection" Text="Clear Selection"/>
    <RadzenDataList
        WrapItems="true"
        AllowPaging="true"
        Data="@allHousing"
        TItem="Housing"
        SelectionMode="DataGridSelectionMode.Single"
        @bind-Value=@housingObject
        >
        <Template Context="housingObject" >
            <RadzenCard Style="width: 100%; margin: 3px; overflow: hidden;" >
                <div class="container">

                    <div class="col-lg-12 product-title">
                        <RadzenText TextStyle="TextStyle.H6" TagName="TagName.H5" Class="rz-color-secondary">House</RadzenText>
                    </div>
                    <div >
                        <div class="row d-flex">
                            <div class="col-lg-2 col-lg-">
                                <RadzenText TextStyle="TextStyle.H6" TagName="TagName.H5" class="mb-0">Country</RadzenText>
                                <RadzenText TextStyle="TextStyle.Body2" class="mb-sm-2 mb-lg-0">@(housingObject.Address.Country)</RadzenText>
                            </div>
                            <div class="col-lg-2 ">
                                <RadzenText TextStyle="TextStyle.H6" TagName="TagName.H5" class="mb-0">City</RadzenText>
                                <RadzenText TextStyle="TextStyle.Body2" class="mb-sm-2 mb-lg-0">@(housingObject.Address.City)</RadzenText>
                            </div>
                            <div class="col-lg-2 ">
                                <RadzenText TextStyle="TextStyle.H6" TagName="TagName.H5" class="mb-0">Street</RadzenText>
                                <RadzenText TextStyle="TextStyle.Body2" class="mb-sm-2 mb-lg-0">@(housingObject.Address.StreetName)</RadzenText>
                            </div>
                            <div class="col-lg-2">
                                <RadzenText TextStyle="TextStyle.H6" TagName="TagName.H5" class="mb-0">House Number</RadzenText>
                                <RadzenText TextStyle="TextStyle.Body2" class="mb-sm-2 mb-lg-0">@(housingObject.Address.HouseNumber)</RadzenText>
                            </div>
                            <div class="col-lg-2">
                                <RadzenText TextStyle="TextStyle.H6" TagName="TagName.H5" class="mb-0">Room Number</RadzenText>
                                <RadzenText TextStyle="TextStyle.Body2" class="mb-sm-2 mb-lg-0">@(housingObject.Address?.RoomNumber)</RadzenText>
                            </div>
                            <div class="col-lg-2">
                                <RadzenText TextStyle="TextStyle.H6" TagName="TagName.H5" class="mb-0">Post code</RadzenText>
                                <RadzenText TextStyle="TextStyle.Body2" class="mb-sm-2 mb-lg-0">@(housingObject.Address.PostCode)</RadzenText>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 p-3 position-absolute bottom-0 end-0">
                        <RadzenButton Text="Apply for" Class="w-100" Click="@Apply"/>
                        

                    </div>
                </div>
            </RadzenCard>
        </Template>
    </RadzenDataList>
}

<label style="color: @color">@resultMsg</label>

<Modal ShowModal="showModal">
    <RadzenText TextStyle="TextStyle.H6" TagName="TagName.H5" class="mb-1">Are you sure you want to apply for that housing?</RadzenText><br/>
    <p>
    <RadzenText TextStyle="TextStyle.H6" TagName="TagName.H5" class="mb-0">Host: hostEmail</RadzenText>
    <RadzenText TextStyle="TextStyle.H6" TagName="TagName.H5" class="mb-0">Country</RadzenText>
    <RadzenText TextStyle="TextStyle.H6" TagName="TagName.H5" class="mb-0">City</RadzenText>
    <RadzenText TextStyle="TextStyle.H6" TagName="TagName.H5" class="mb-0">Street</RadzenText>
    <RadzenText TextStyle="TextStyle.H6" TagName="TagName.H5" class="mb-0">House Number</RadzenText>
    <RadzenText TextStyle="TextStyle.H6" TagName="TagName.H5" class="mb-0">Room Number</RadzenText>
    <RadzenText TextStyle="TextStyle.H6" TagName="TagName.H5" class="mb-0">Post code</RadzenText>
    </p>
    <div>
                            <RadzenButton Text="Confirm" Click="@Confirm"/>
                            <RadzenButton Text="Cancel"  Click="@Cancel"/>
    
                        </div>
</Modal>

